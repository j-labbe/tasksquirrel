{
  "name": "tasksquirrel",
  "displayName": "TaskSquirrel",
  "description": "Run your VSCode tasks with ease.",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "j-lab1234",
  "repository": {
    "type": "git",
    "url": "https://github.com/j-labbe/tasksquirrel.git"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "task",
    "tasks",
    "packages",
    "execute",
    "run"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tasksquirrel.refresh",
        "title": "Refresh",
        "icon": "refresh.svg"
      },
      {
        "command": "tasksquirrel.executeTask",
        "title": "Run Task"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tasksquirrel.refresh",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "tasksquirrel",
          "name": "TaskSquirrel",
          "type": "tree",
          "treeDataProvider": "vscodeTasksDataProvider"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "TaskSquirrel",
      "properties": {
